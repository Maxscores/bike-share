    <script>
     function initMap() {
       var stations = [
           ['Starting Station',
           <%= @trip.start_station_latitude %>,
           <%= @trip.start_station_longitude %>,
           0],
           ['Ending Station',
           <%= @trip.end_station_latitude %>,
           <%= @trip.end_station_longitude %>,
           1]
         ];

       var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: new google.maps.LatLng(<%= @trip.start_station_latitude %>,
                                         <%= @trip.start_station_longitude %>)
         });

       var marker, i;

       for( i = 0; i < stations.length; i++ ) {
         marker = new google.maps.Marker({
             position: new google.maps.LatLng(stations[i][1], stations[i][2]),
             map: map
         })(marker, i));
       }
     }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAPiZRNt7SNQqhm39Aug86hg9HXrTLBLZQ&callback=initMap">
    </script>
  </div>

