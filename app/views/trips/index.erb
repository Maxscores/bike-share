<head>
  <title>All Trips</title>
  <link rel="stylesheet" type="text/css" href="/reset.css">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <link rel="icon" type="image/png" href="https://imgur.com/P5MWuLX.png" />
  <script src="//www.google.com/jsapi"></script>
  <script src="chartkick.js"></script>
</head>

<body class="index-background">
  <main class="indexes-fp">
    <section class="indexes-main">
      <ul class="indexes-table-header">
        <li class="table-styles trip-id-tab the-li-pads">Trip #:</li>
        <li class="table-styles duration-tab the-li-pads">Duration:</li>
        <li class="table-styles start-date-tab the-li-pads">Start Date:</li>
        <li class="table-styles start-station-tab the-li-pads">Start Station:</li>
        <li class="table-styles end-date-tab the-li-pads">End Date:</li>
        <li class="table-styles end-station-tab the-li-pads">End Station:</li>
        <li class="table-styles bike-id-tab the-li-pads">Bike ID:</li>
        <li class="table-styles subscription-tab the-li-pads">Subscription:</li>
        <li class="table-styles zip-tab the-li-pads">Zip:</li>
      </ul>
      <div class="trip-cond-table-size">
        <% @trips.each do |trip| %>
          <ul>
            <section class = "display_object">
              <li class="table-styles trip-id-tab the-li-pads"><a class="station_name_link" href="/trips/<%= trip.id %>">Trip <%= trip.id %></a></li>
              <li class="table-styles duration-tab the-li-pads"><%= trip.duration %> min.</li>
              <li class="table-styles start-date-tab the-li-pads"><%= trip.start_date %> </li>
              <li class="table-styles start-station-tab the-li-pads"><%= trip.start_station_name %> </li>
              <li class="table-styles end-date-tab the-li-pads"><%= trip.end_date %></li>
              <li class="table-styles end-station-tab the-li-pads"><%= trip.end_station_name %></li>
              <li class="table-styles bike-id-tab the-li-pads"><%= trip.bike_id %> </li>
              <li class="table-styles subscription-tab the-li-pads"><%= trip.subscription_type %></li>
              <li class="table-styles zip-tab the-li-pads"><%= trip.zipcode %> </li>
            </section>
          </ul>
        <% end %>
      </div>
    </section>

    <aside class="indexes-aside">
      <div class="logo-thingy">
        <center>
          <a href="/"><img class="logo-back" src="images/bike_share_logo.png"></a>
        </center>
      </div>
      <div class="station-back">
        <a class="aside-link" href="/stations"><img class="nav-icons station-icon" src="images/bike-icon.jpeg"><p class="aside-text">Station Index</p></a>
      </div>
      <div class="station-dash-back">
        <a class="aside-link" href="/station-dashboard"><img class="nav-icons" src="images/station-dashboard-icon.png"><p class="aside-text">Station Dashboard</p></a>
      </div>
      <div class="trips-back">
        <a class="aside-link" href="/trips"><img class="nav-icons" src="images/trip-icon.png"><p class="aside-text">Trips Index</p></a>
      </div>
      <div class="trips-dash-back">
        <a class="aside-link" href="/trip-dashboard"><img class="nav-icons" src="images/trip-dashboard-icon.png"><p class="aside-text">Trips Dashboard</p></a>
      </div>
      <div class="condition-back">
        <a class="aside-link" href="/conditions"><img class="nav-icons" src="images/weather-icon.png"><p class="aside-text">Conditions Index</p></a>
      </div>
      <div class="condition-dash-back">
        <a class="aside-link" href="/weather-dashboard"><img class="nav-icons" src="images/conditions-dashboard-icon.png"><p class="aside-text">Weather Dashboard</p></a>
      </div>
    </aside>
  </main>

  <div class="create-new">
    <a class="make-new" href="/trips/new">New Trip</a>
  </div>

  <div class="paginate">
    <% if @paginate.present? && @paginate != "1" %>
      <a class="pag-link" href="/trips?page=<%= @pagdown %>">&laquo;</a>
      <%= @paginate %>
      <a class="pag-link" href="/trips?page=<%= @paginate.next %>">&raquo;</a>
    <% else %>
      <a class="pag-link" href="/trips?page=2">&raquo;</a>
    <% end %>
  </div>
</body>
