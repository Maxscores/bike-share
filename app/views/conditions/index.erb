<%= erb :banner %>

<head>
  <title>All Conditions</title>
</head>

<ul class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li>Conditions</li>
</ul>

<a class="button" href="/conditions/new">New Weather Condition</a>

<main class="flex-parent">
<% @conditions.each do |condition| %>
  <ul>
    <section class = "display_object">
    <li class><a href="/conditions/<%= condition.id %>">Conditions on <%= condition.date %></a></li>
    <li> <%= condition.max_temperature %> </li>
    <li> <%= condition.mean_temperature %> </li>
    <li> <%= condition.min_temperature %>  </li>
    <li> <%= condition.mean_humidity %> </li>
    <li> <%= condition.mean_visibility_miles %> </li>
    <li> <%= condition.mean_wind_speed_mph %> </li>
    <li> <%= condition.precipitation_inches %> </li>
  </section>
  </ul>
<% end %>
</main>

<center class="paginate">
  <% if @paginate.present? && @paginate != "1" %>
    <a href="/conditions?page=<%= @pagdown %>">&laquo;</a>
    <%= @paginate %>
    <a href="/conditions?page=<%= @paginate.next %>">&raquo;</a>
  <% else %>
    <a href="/conditions?page=2">&raquo;</a>
  <% end %>
</center>
